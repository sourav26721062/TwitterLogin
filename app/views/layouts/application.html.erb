<!DOCTYPE html>
<html>
<head>
  <title>Twitter Login</title>
  <%= stylesheet_link_tag    :application %>
  <%= stylesheet_link_tag    :login %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
<% if current_user %>
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li role="presentation" class="active"><a href="/logout">Sign Out</a></li>
          </ul>
        </nav>
        <table>
		        <tr>
              <td><%= image_tag @user.profile_image, :class => "img-circle" %></td>
			        <td><h2>&nbsp;<%= current_user.name %></h2></td>
		        </tr>
	      </table>
      </div>
      <div class="jumbotron">
        <h3>About You</h3>
        <p class="lead"><%= current_user.description %></p>
      </div>
      <% end %>
      <%=yield %>
      </div>
</body>
</html>
